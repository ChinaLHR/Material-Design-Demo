<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lhr.mdt1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SnackBarActivity"/>
        <activity android:name=".activity.LinearProgressActivity"/>
        <activity android:name=".activity.CardViewActivity"/>
        <activity android:name=".activity.TabsActivity"/>
        <activity android:name=".activity.TextInputActivity"/>
        <activity android:name=".activity.FabActivity"/>
        <activity android:name=".activity.CoordinatorLayout"/>
        <activity android:name=".activity.NavigationDrawerActivity"/>
        <activity android:name=".activity.TranslucentActivity"
            android:theme="@style/ImageTranslucentTheme"/>
        <activity android:name=".activity.SwipeRefreshActivity"/>
        <activity android:name=".activity.SearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
    </application>

</manifest>